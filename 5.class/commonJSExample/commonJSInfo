bu commonjs ornegi sanirim
module.exports = {
  getName: () => {
    return 'Jim';
  },

  getLocation: () => {
    return 'Munich';
  },

  dob: '12.01.1982',
};


const { getName, dob } = require('./user');
console.log(
  `${getName()} was born on ${dob}.`
);

